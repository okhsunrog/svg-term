{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib/",
    "rootDir": "src/",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "types": ["node", "react", "react-dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "typings/**/*.d.ts"]
}
